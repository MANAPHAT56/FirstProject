<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>QR Coupon</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .container {
            max-width: 90%;
            width: 600px;
            padding: 20px;
            background: none;
            text-align: center;
        }

        header h1 {
            font-size: 24px;
            margin-bottom: 10px;
            color: #333;
        }

        /* นาฬิกานับถอยหลัง */
        .countdown {
            font-size: 20px;
            font-weight: bold;
            color: red;
            margin-bottom: 15px;
        }

        .barcode-container {
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 20px 0;
        }

        .barcode-img {
            width: 80%;
            max-width: 500px;
            max-height: 50vh;
            object-fit: contain;
        }

        .btn-confirm {
            display: block;
            margin: 20px auto 0;
            width: 50%;
            padding: 12px;
            background-color: #28a745;
            color: white;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background 0.3s ease-in-out;
        }

        .btn-confirm:hover {
            background-color: #218838;
        }

        /* ปุ่มปิดใช้งานเมื่อหมดเวลา */
        .disabled {
            background-color: gray !important;
            cursor: not-allowed;
        }
    </style>
</head>
<body>
    <%- include('navbar') %>
    <div class="container">
        <header>
            <h1>Use Your Coupon</h1>
        </header>
        
        <!-- นาฬิกานับถอยหลัง -->
        <div class="countdown" id="countdown">3:00 ก่อนหมดอายุ</div>

        <main>
            <section class="qr-section">
                <div class="barcode-container">
                    <img src="../images/barcode.jpg" alt="Barcode" class="barcode-img">
                </div>
                <!-- ปุ่มยืนยัน -->
                <form action="/deletecoupon/<%=couponId%>" method="POST">
                    <button class="btn-confirm" id="confirmBtn" type="submit">Confirm</button>
                </form>
            </section>
        </main>
    </div>

    <script>
        let timeLeft = 180; // 3 นาที = 180 วินาที
        const countdownEl = document.getElementById("countdown");
        const confirmBtn = document.getElementById("confirmBtn");

        function updateCountdown() {
            let minutes = Math.floor(timeLeft / 60);
            let seconds = timeLeft % 60;
            seconds = seconds < 10 ? "0" + seconds : seconds; // ให้ 0 นำหน้าถ้าเป็นเลขหลักเดียว
            countdownEl.innerHTML = minutes + ":" + seconds + " ก่อนหมดอายุ";
            if (timeLeft === 0) {
                clearInterval(timer);
                countdownEl.innerHTML = "หมดอายุแล้ว!";
                confirmBtn.disabled = true;
                confirmBtn.classList.add("disabled");
                fetch(`/deletecoupon/${couponId}`, {
                    method: 'POST', // หรือใช้ GET ถ้าคุณต้องการ
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ couponId })  // ส่งข้อมูล เช่น couponId ถ้าจำเป็น
                })
                .then(response => response.json())
                .then(data => {
                    console.log(data);
                 if (!data.error) {
                     alert(data.message); // Show alert for errors
                      window.location.href='/tasks';
                }else{
                  alert(data.error);
                 window.location.href='\login';
                }
                })
                .catch(error => {
                    console.error('Error:', error);
                });
            } else {
                timeLeft--;
            }
        }
        let timer = setInterval(updateCountdown, 1000);
    </script>
</body>
</html>
